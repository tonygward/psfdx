{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pester: Run all tests",
            "type": "process",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-NonInteractive",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "Invoke-Pester -Configuration @{ Run = @{ Path='${workspaceFolder}'}; TestResult=@{ Enabled=$true; OutputPath='testResults.xml'; OutputFormat='NUnitXml'} }"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
}
